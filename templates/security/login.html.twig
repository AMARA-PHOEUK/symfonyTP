{% extends 'base.html.twig' %}
{% block body %}
<h1 class="text-center">Connexion</h1>

<form action="{{ path('login_secu')}}" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" name="_username" placeholder="votre login">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="_password" placeholder="mot de passe">
    </div>
    <div class="form-group">
    <button type="submit" class="btn-success">Connexion</button>
    </div>
</form>

{% endblock %}